{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@etic/database": ["./packages/database/src"],
      "@etic/ui": ["./packages/ui/src"],
      "@etic/types": ["./packages/types/src"],
      "@etic/config": ["./packages/config/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
