# This is a root-level example file
# Copy this to individual services and configure them

# Database (used by packages/database and services/api)
DATABASE_URL="postgresql://user:password@localhost:5432/etic?schema=public"

# API Service (services/api)
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# Optional: File storage (AWS S3 or Cloudflare R2)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=

# Optional: Email service (Resend, SendGrid, etc.)
EMAIL_FROM=noreply@etic.com
EMAIL_API_KEY=

# Optional: Payment gateways
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
